<h4>Please re-enter your password to access WALLET section.</h4>

<%= form_for(current_member, url: do_verify_wallet_transactions_path(@member), class: "form-group") do |f| %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
<% end %>